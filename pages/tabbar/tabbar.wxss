/**index.wxss**/
page {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.nav-tabs {
  width: 100%;
  display: flex;
  position: fixed;
  bottom: 0;
}

.tab-list {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column-reverse;
  background: #fff;
  height: 95rpx;
  border-top: thin solid #ddd;

}

.tab-text {
  font-size: 24rpx;
  line-height: 35rpx;
  color: #ddd;
}

.iconPath {
  width:50rpx;
  height: 50rpx;
}

.tab-content {
  flex: 1;
}

.default {
  line-height: 75rpx;
  text-align: center;
  flex: 1;
  /* border-bottom: 1px solid #eee; */
  color: #ddd;
  font-size: 28rpx;
  
}

.active {
  line-height: 75rpx;
  text-align: center;
  
  flex: 1;
  /* border-bottom: 1px solid red; */
  
  font-size: 28rpx;
}
.active .tab-text{
  color: #24dd82;
}

.show {
  display: block;
  flex: 1;
}

.hidden {
  display: none;
  flex: 1;
}
