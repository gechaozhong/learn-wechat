}
/*弹窗*/
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}
.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0%;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 105rpx;
  border-radius: 25rpx;
}
.modal-title {
  padding-top: 50rpx;
  font-size: 28rpx;
  color: #666;
  line-height: .8;
  text-align: center;
}
.modal-content {
  padding: 40rpx 32rpx;
}
.modal-input {
  display: flex;
  background: #fff;
  border: 2rpx solid #ddd;
  border-radius: 10rpx;
  font-size: 28rpx;
}
.input {
  
  width: 100%;
  text-align: center;
  height: 70rpx;
  font-size: 28rpx;
  line-height: 70rpx;

  box-sizing: border-box;
  color: #666;
}
input-holder {
  color: #666;
  font-size: 28rpx;
}
.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  
  font-size: 34rpx;
  line-height: 86rpx;
}
.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;

}
.btn-confirm {
  width: 50%;
  color: #24dd82;
  text-align: center;
}
.btn-confirm,
.btn-cancel{
  border: 0;
  font-size: 34rpx;
  border-radius: 0;
}
