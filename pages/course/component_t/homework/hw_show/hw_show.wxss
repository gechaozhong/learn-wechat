page{
  background: #efefef;
  font-size: 28rpx;
  color: #666;
  padding-bottom: 140rpx;
}
.block,.head{
  width: 90%;
  margin: 0 auto 30rpx;
  background: white;
  box-shadow:  0 0 10rpx #ddd;
}
.head{
  width: 90%;
  padding: 3% 0;
}
.head view{
  margin: 0% 5%;
  height: 70rpx;
  
 line-height: 70rpx;
}
.head view text{
  vertical-align: top;
  height: 70rpx;
}
.head input{
  width: 80%;
  height: 70rpx;
  display: inline-block;
  vertical-align: top;
  border-bottom: thin solid #ddd;
}
.block .title{
  border-bottom: thin dashed #ddd;
}
.block view.block-con{
  margin: 3% 5%;
}
.block .title,.edit{
  padding: 3% 5%;
  
}
.block .desc{
  color: #444;
}
.block .ans{
  padding-top: 5%;
}
.block .edit{
  border-top: thin dashed #ddd;
}
.block .edit view{
  display: inline-block;
  vertical-align: top;
}
.block .edit view:first-child{
  color: #316eff;
}
.block .edit view:last-child{
  color: red;
  float: right;
}
.block .ans,
.block .cho{

  width: 100%;

  word-wrap: break-word;
  word-break: break-all;
  overflow: hidden;

}
